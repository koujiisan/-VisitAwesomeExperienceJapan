<div class="experience">
  <p class="title">
    <%= @experience.title %>
  </p>

  <p class="image">
    <%= image_tag(@experience.image) if @experience.image.attached? %>
  </p>

  <div class="disc-area">
    <p>
      <%= @experience.time.try(:strftime, "%Y-%m-%d") %>
    </p>
    <p>
      <%= @experience.description %>
    </p>
    <p>
      ユーザー名:<%= @experience.user.name %>
    </p>
    <p>
      <%= @experience.tag %>
    </p>
  </div>

  <% if @experience.user == current_user %>
    <%= link_to '編集', edit_experience_path(@experience) %>
  <% end %>
</div>

<div>
  <%= link_to "Back to experiences", experiences_path %>
</div>