<div class="form">
  <%= form_with url: login_path, method: :post, data: { turbo: false } do |f| %>
    <div class="field">
      <%= f.label :email, t('activerecord.attributes.user.email'), class: 'form-label' %>
      <%= f.text_field :email, class: 'form-text-field' %>
    </div>
    <div class="field">
      <%= f.label :password, t('activerecord.attributes.user.password'), class: 'form-label' %>
      <%= f.password_field :password, class: 'form-text-field' %>
    </div>
    <div class="actions">
      <%= f.submit t('login.login_button'), class: 'btn-submit login' %>
    </div>
  <% end %>
</div>