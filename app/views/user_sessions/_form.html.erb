<div class="form">
  <%= form_with url: login_path, method: :post do |f| %>
    <div class="field">
      <%= f.label :email, class: 'form-label' %>
      <%= f.text_field :email, class: 'form-text-field' %>
    </div>
    <div class="field">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, class: 'form-text-field' %>
    </div>
    <div class="actions">
      <%= f.submit "Login", class: 'btn-submit login' %>
    </div>
  <% end %>
</div>